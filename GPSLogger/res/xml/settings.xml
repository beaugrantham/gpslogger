<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  android:key="gpslogger_preferences">

    <PreferenceScreen android:title="@string/pref_loggingto_title" android:summary="@string/pref_loggingto_summary">
        <Preference android:title="@string/log_customurl_title"
                    android:summary="@string/log_customurl_summary" android:key="customurl_setup">
            <intent android:action="com.mendhak.gpslogger.CUSTOMURL_SETUP" />
        </Preference>

        <!--
        <CheckBoxPreference android:key="log_plain_text"
                            android:summary="@string/log_plain_text_summary" android:title="@string/log_plain_text_title"/>
                            -->
    </PreferenceScreen>


    <PreferenceScreen android:title="@string/pref_logging_title"
                      android:summary="@string/pref_logging_summary">
        <PreferenceCategory android:title="@string/pref_logging_title">

            <Preference android:key="gpslogger_folder" android:title="@string/gpslogger_folder_title"
                        android:summary="@string/gpslogger_folder_summary"></Preference>
        </PreferenceCategory>
        <PreferenceCategory android:title="@string/pref_performance_title">
            <CheckBoxPreference android:key="prefer_celltower"
                                android:summary="@string/prefer_celltower_summary"
                                android:title="@string/prefer_celltower_title"/>

            <EditTextPreference android:key="time_before_logging"
                                android:title="@string/time_before_logging_title"
                                android:summary="@string/time_before_logging_summary"
                                android:dialogTitle="@string/time_before_logging_dialog_title"
                                android:numeric="integer" android:maxLength="4"
                                android:hint="@string/time_before_logging_hint"/>

            <CheckBoxPreference android:key="keep_fix"
                                android:summary="@string/keep_fix_summary"
                                android:title="@string/keep_fix_title"/>


            <EditTextPreference android:key="distance_before_logging"
                                android:title="@string/distance_before_logging_title"
                                android:summary="@string/distance_before_logging_summary"
                                android:dialogTitle="@string/settings_distance_in_meters"
                                android:numeric="integer" android:maxLength="4"
                                android:hint="@string/settings_enter_meters"/>


            <EditTextPreference android:key="accuracy_before_logging"
                                android:title="@string/accuracy_before_logging_title"
                                android:summary="@string/accuracy_before_logging_summary"
                                android:dialogTitle="@string/settings_accuracy_in_meters"
                                android:numeric="integer" android:maxLength="4"
                                android:hint="@string/settings_enter_meters"/>

            <EditTextPreference android:key="retry_time"
                                android:title="@string/retry_time_title"
                                android:summary="@string/retry_time_summary"
                                android:dialogTitle="@string/retry_time_dialog_title"
                                android:numeric="integer" android:maxLength="4"
                                android:hint="@string/retry_time_hint"/>

            <EditTextPreference android:key="timeout_time"
                                android:title="@string/timeout_time_title"
                                android:summary="@string/timeout_time_summary"
                                android:dialogTitle="@string/timeout_time_dialog_title"
                                android:numeric="integer" android:maxLength="4"
                                android:hint="@string/timeout_time_hint"/>



        </PreferenceCategory>
    </PreferenceScreen>
    <PreferenceScreen android:title="@string/pref_general_title" android:summary="@string/pref_general_summary">

        <CheckBoxPreference android:key="show_notification"
                            android:summary="@string/show_notification_summary"
                            android:title="@string/show_notification_title"
                            android:defaultValue="true"/>
        <CheckBoxPreference android:title="@string/startonbootup_title"
                            android:summary="@string/startonbootup_summary" android:key="startonbootup"/>
        <CheckBoxPreference android:title="@string/useimperial_title"
                            android:summary="@string/useimperial_summary" android:key="useImperial"/>
        <Preference android:title="@string/enabledisablegps_title"
                    android:summary="@string/enabledisablegps_summary" android:key="enableDisableGps"
                    android:defaultValue="false"/>

        <CheckBoxPreference android:title="@string/debuglog_title" android:summary="@string/debuglog_summary"
                            android:key="debugtofile" android:defaultValue="false"/>

    </PreferenceScreen>
    <PreferenceScreen android:key="autopublish_preferencescreen" android:title="@string/pref_autopublish_title" android:summary="@string/pref_autopublish_summary">

        <CheckBoxPreference android:key="autopublish_enabled"
                            android:title="@string/autopublish_enabled"
                            android:summary="@string/autopublish_enabled_summary" />


        <ListPreference android:key="autopublish_frequency"
                        android:title="@string/autopublish_frequency"
                        android:summary="@string/autopublish_frequency_summary"
                        android:entries="@array/autopublish_frequencies" android:defaultValue="0"
                        android:entryValues="@array/autopublish_values"/>

        <PreferenceCategory android:title="@string/autopublish_targets_category">
            <Preference android:title="@string/autopost_setup_title"
                        android:summary="@string/autopost_setup_summary" android:key="autopost_setup">
                <intent android:action="com.mendhak.gpslogger.AUTOPOST_SETUP" />
            </Preference>
        </PreferenceCategory>



    </PreferenceScreen>


</PreferenceScreen>
